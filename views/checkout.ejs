<%- include("./partials/checkout-header") %>

<div class="container">

	<div class="row text-center">
		<div class="col-lg-offset-3 col-lg-6 col-sm-offset-2 col-sm-8">
			<div class="sr-root">
				<div class="sr-main">
					<h4 style="margin-top: 5px; margin-bottom: 0px; font-size: 22px;">Registration Payment</h4>
					<h6 style="margin-bottom: 20px;">
						Payment is not required, but all donations are very much appreciated. 100% of all proceeds will go to World Central Kitchen's 
						<a style="color: rgb(72, 72, 252); text-decoration: underline;" href="https://wck.org/chefsforamerica" target="_blank">#ChefsForAmerica</a>
						Covid-19 restaurant relief fund.</h6>
					<form id="payment-form" class="sr-payment-form">
							<div class="sr-combo-inputs-row">
								<div class="sr-input sr-card-element" id="card-element"></div>
							</div>
							<div class="sr-field-error" id="card-errors" role="alert"></div>
							<button id="submit">
								<div class="spinner hidden" id="spinner"></div>
								<span id="button-text">Pay $<%= amount %></span>
							</button>
					</form>
				</div>
			</div>
		</div>
	</div>
<div style="margin-bottom: 50px;" id="creditCards">

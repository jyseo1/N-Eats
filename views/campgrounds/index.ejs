<%- include("../partials/header") %>
	
<% if(currentUser && currentUser.isAdmin){ %>
	<h4 style="text-align: center; background-color: lightgray; margin-top: 0px; font-family: monospace; padding: 5px;">
		You're an admin!
	</h4>
<% } %>

	<header class="jumbotron">
		<div class="container">
			<h1 id="indexH1"><span class="glyphicon glyphicon-glass"></span> <span id="indexTitle">Welcome to Neighborhood Eats</span></h1>
			<p><i>Easily discover, share, and review local restaurants. <br> Let's help our local eateries during this difficult time, sign up to post your favorite neighborhood spots!</i></p>
			<p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Restaurant</a></p>
		</div>
	</header>

	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<% campgrounds.forEach(function(campground){ %>
		<div class="col-lg-4 col-md-4 col-sm-6">
			<div class="thumbnail">
				<img id= "images" src="<%= campground["image"] %>">
				<div class= "caption">
					<h4><%= campground["name"] %></h4>
				</div>
				<div>
					<p>
					<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
					</p>
				</div>
			</div>
		</div>
		<% }); %>
	</div>	



<%- include("../partials/footer") %>